.menu {
  flexContainer();
  flex-wrap: nowrap;
  align-items: center;
  position: relative;
  text-align: left;
}

.menu__list {
  flexItem(0, 0, auto);
}

.menu__item {
  &:first-of-type .menu__link {
    color: $projectsColor;
  }

  &:nth-of-type(2) .menu__link {
    color: $conceptsColor;
  }

  &:nth-of-type(3) .menu__link {
    color : $aboutColor;
  }

  &:nth-of-type(4) .menu__link {
    color : $elsewhereColor;

    .elsewhere-page & {
      color: $quaternary--dark;
    }
  }

  &:hover::before,
  &:focus::before {
      box-shadow : inset 0 0 600px 0 rgba($quaternary--dark, 1);
      opacity    : 1;
  }

  &::before {
      display          : block; // for IE11 pointer-events
      content          : '';
      position         : fixed;
      top              : 0;
      right            : 0;
      bottom           : 0;
      left             : 0;
      width            : 100vw;
      height           : 100vh;
      transform-origin : center;
      opacity          : 0;
      transition       : opacity 10000ms ease-in;
      z-index          : -1;
      pointer-events   : none;
  }
}

.menu__link {
  @extend .displayFontBold;
  display         : block;
  width           : auto;
  max-width       : rem(650);
  margin          : rem(20) 0;
  z-index         : 1;
  font-size       : rem(54);
  transform       : scale(1);
  text-decoration : none;
  text-align      : left;
  white-space     : nowrap;
  user-select     : none;
  transition      : color 300ms ease-in-out,
                    transform 300ms ease-in-out;

    &:focus {
      outline : none;
    }

    +min-screen($media-small) {
        font-size : rem(72);

        &:hover,
        &:focus {
            transform : scale(1.1);
            z-index : 0;
        }

    }

    .list & {
      @extend .displayFont;
      color     : $white !important;
      font-size : rem(22);
    }

}
