// Typographical heading styles

// *******************************************
// *******************************************

$h1-font-size= 2em;
$h2-font-size= 1.5em;
$h3-font-size= 1.17em;
$h4-font-size= 1em;
$h5-font-size= 0.83em;
$h6-font-size= 0.75em;

$h1-margin= 0.67em 0;
$h2-margin= 0.83em 0;
$h3-margin= 1em 0;
$h4-margin= 1.33em 0;
$h5-margin= 1.67em 0;
$h6-margin= 1.7em 0;

.h1 {
  @extend .displayFontBold;
  margin: $h1-margin;
  font-size: $h1-font-size;
  color: $display-color;
}

.h2 {
  @extend .displayFontBold;
  margin: $h2-margin;
  font-size: $h2-font-size;
  color: $display-color;
}

.h3 {
  @extend .displayFontBold;
  margin: $h3-margin;
  font-size: $h3-font-size;
  color: $display-color;
}

.h4 {
  @extend .displayFontBold;
  margin: $h4-margin;
  font-size: $h4-font-size;
  color: $display-color;
}

.h5 {
  @extend .displayFontBold;
  margin: $h5-margin;
  font-size: $h5-font-size;
  color: $display-color;
}

.h6 {
  @extend .displayFontBold;
  margin: $h6-margin;
  font-size: $h6-font-size;
  color: $display-color;
}

// force proper styling for all
// elements inside typography element
.typography {

  h1 {
    @extend .h1;
  }

  h2 {
    @extend .h2;
  }

  h3 {
    @extend .h3;
  }

  h4 {
    @extend .h4;
  }

  h5 {
    @extend .h5;
  }

  h6 {
    @extend .h6;
  }

}

.page__subtitle {
    @extend .displayFontBold;
    color     : $white;
    font-size : rem(32);
    margin-top: rem(100);
    margin-bottom: rem(50);
    text-align: center;

    +min-screen($media-medium) {
        margin-top : rem(172);
    }

}
