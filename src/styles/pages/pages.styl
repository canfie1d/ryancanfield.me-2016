// Page-Specific Styles

// *******************************************
// *******************************************

.page {
  background: $gray--800;
}

.menu-page,
.concepts-page,
.about-page,
.projects-page,
.elsewhere-page,
.secret-page {
    box-sizing : content-box;
    position   : fixed;
    top        : 0;
    right      : 0;
    bottom     : 0;
    left       : 0;
    overflow   : auto;
    -webkit-overflow-scrolling : touch;
}

.concepts-page,
.about-page,
.projects-page,
.elsewhere-page,
.secret-page {
    box-shadow : inset 0 0 300px 0 rgba($black, .1);
}

.menu-page {
    background : $off-white;
}

.concepts-page {
    background : $conceptsColor;
}

.about-page {
    background : $aboutColor;
}

.projects-page {
    background : $projectsColor;
}

.elsewhere-page {
    background : $elsewhereColor;
}

.secret-page {
    background : $gray--800;
}

.page__content-container {
    flexContainer();
    flex-direction: column
    flex-wrap  : nowrap;
    position   : relative;
    width      : 100%;
    min-height : 100vh;
}

.page__content {
  flexItem(0, 1, auto);
  box-sizing: border-box;
  position  : relative;
  width     : 100%;
  max-width : rem(1024);
  padding   : rem(10);
  margin    : auto;

  &.page__content--p-width {
    > * {
      max-width : rem(650);
      margin    : 0 auto rem(50);
    }
  }
}
